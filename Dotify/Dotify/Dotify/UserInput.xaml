<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dotify.UserInput">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="PlaylistName" Placeholder="Ex: Workout" />
            <Button Text="Create" Clicked="Button_Clicked" />
            <Button Text="Delete" Clicked="Button_Clicked_1" />
            <Button Text="Go Back" Clicked="Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>