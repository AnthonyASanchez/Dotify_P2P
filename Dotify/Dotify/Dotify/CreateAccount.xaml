<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dotify.CreateAccount">

    <ContentPage.Resources>
        <ResourceDictionary>
            <ControlTemplate
                x:Key="CreateAccountTemplate">
                <Grid>
                    <BoxView
                        Color="DarkGray"
                        HeightRequest="30"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="StartAndExpand"
                        />
                    <ContentPresenter/>
                </Grid>
            </ControlTemplate>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentView
        x:Name="CreateAccountView"
        ControlTemplate="{StaticResource CreateAccountTemplate}">
        <StackLayout
            VerticalOptions="CenterAndExpand">
            <Entry
                Margin="0, 10, 0, 0"
                Placeholder="Username"/>
            <Entry 
                Placeholder="Password"
                IsPassword="True"/>
            <Entry
                Placeholder="Verify Password"
                IsPassword="True"/>
            <Button
                Text="Create Account"
                />
        </StackLayout>
    </ContentView>

</ContentPage>