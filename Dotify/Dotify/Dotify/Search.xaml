<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dotify.Search"
             Title="Search">
    <ContentPage.Content>
        <StackLayout>
            <SearchBar x:Name="MainSearchBar" SearchButtonPressed="MainSearchBar_SearchButtonPressed"></SearchBar>
            <ListView x:Name="MainListView">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ImageCell
                    Text="{Binding Title}" 
                    TextColor="Black"
                    Detail="{Binding Artist}" 
                    DetailColor="Gray"
                        />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>