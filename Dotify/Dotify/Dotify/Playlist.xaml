<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="Dotify.SongBarView"
             x:Class="Dotify.Playlist"
             Title="Playlist">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="PlayList Information" />
            <ListView x:Name ="PlaylistView">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ImageCell Text="{Binding ListName}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button Text="Create Playlist" VerticalOptions="Center" HorizontalOptions="Center" Clicked="OnButtonClicked"/>
            <Button Text="Delete Playlist" VerticalOptions="Center" HorizontalOptions="Center" Clicked="OnButtonClicked" />
            <views:SongBarView />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>