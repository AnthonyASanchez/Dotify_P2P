<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dotify.ForgetPassword">
    <ContentPage.Content>
        <StackLayout>

            <StackLayout Padding="30,50">

                <Label x:Name="FirstQuestion"                 
                       FontSize="25"/>

                <Entry
                        Placeholder="Answer"/>

                <Label x:Name="SecondQuestion"
                       Margin="25, 0, 25, 0"
                       FontSize="25"/>

                <Entry
                        Placeholder="Answer"/>


                <Button Text="Verify"
                        x:Name="ButtonVerify"
                        HorizontalOptions="Center"/>

             </StackLayout>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>